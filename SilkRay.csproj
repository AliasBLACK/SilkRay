<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    
    <!-- NativeAOT compatibility settings -->
    <IsAotCompatible>true</IsAotCompatible>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <IsTrimmable>true</IsTrimmable>
    
    <!-- NuGet Package Metadata -->
    <PackageId>SilkRay</PackageId>
    <Version>2025.1.1</Version>
    <Authors>AliasBLACK</Authors>
    <Company>AliasBLACK</Company>
    <Product>SilkRay</Product>
    <Description>A Raylib-compatible API built on Silk.NET with full NativeAOT support. Provides cross-platform 2D graphics, input handling, and audio capabilities with zero-cost abstractions.</Description>
    <PackageTags>raylib;silknet;graphics;gamedev;2d;opengl;nativeaot;crossplatform</PackageTags>
    <PackageProjectUrl>https://github.com/AliasBLACK/SilkRay</PackageProjectUrl>
    <RepositoryUrl>https://github.com/AliasBLACK/SilkRay</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>Updated release with README.md included in package</PackageReleaseNotes>
    <Copyright>Copyright Â© 2024 AliasBLACK</Copyright>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FontStashSharp.PlatformAgnostic" Version="1.4.1" />
    <PackageReference Include="Silk.NET.OpenGL" Version="2.22.0" />
    <PackageReference Include="Silk.NET.Windowing" Version="2.22.0" />
    <PackageReference Include="Silk.NET.Windowing.Glfw" Version="2.22.0" />
    <PackageReference Include="Silk.NET.GLFW" Version="2.22.0" />
    <PackageReference Include="Silk.NET.Input" Version="2.22.0" />
    <PackageReference Include="Silk.NET.Input.Glfw" Version="2.22.0" />
    <PackageReference Include="TextCopy" Version="6.2.1" />
    <PackageReference Include="StbImageSharp" Version="2.30.15" />
  </ItemGroup>

  <!-- Include README in NuGet package -->
  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <!-- NativeAOT Root Descriptors (only included when publishing with AOT) -->
  <ItemGroup Condition="'$(PublishAot)' == 'true'">
    <RdXmlFile Include="rd.xml" />
  </ItemGroup>

</Project>
